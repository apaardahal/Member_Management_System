<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <h5>User List</h5>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary btn-sm " href="/User/action/add"><i class="fas fa-pen"></i> Add</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        {{#ifEquals ALLUserInformation.success true}}
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Role</th>
                        <th scope="col">Role Remarks</th>
                        <th class="text-center" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each ALLUserInformation.result}}
                    <tr>
                        <td>{{SN @index}}</td>
                        <td>{{this.UserName}}</td>
                        <td>{{#if this.Role}} {{this.Role}} {{else}} Not Defined {{/if}}</td>
                        <td>{{#if this.Role_Remarks}} {{this.Role_Remarks}} {{else}} Not Defined {{/if}}</td>
                        <td class="text-center"><a
                                href="/User/action/edit?User={{this.UserId}}"
                                style="text-decoration:none;color:white;"><i class="fas fa-edit text-success"></i>
                                Edit</a>
                            </form>
                        </td>
                        <td class="text-center">
                            <form method="POST" action="/User/remove/{{this.UserId}}">
                                <button type="submit" style="background: transparent; color:white;border:none;"><i class="fas fa-trash text-danger"></i>
                                    Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="6">
                            <ul class="pagination justify-content-center">
                                {{#if ALLUserInformation.navigation.previous_page}}
                                <li class="page-item"><a class="page-link"
                                        href="{{ALLUserInformation.navigation.previous_page}}">Previous</a></li>
                                {{else}}
                                <li class="page-item disabled"><a class="page-link"
                                        href="{{ALLUserInformation.navigation.previous_page}}" tabindex="-1"
                                        aria-disabled="true">Previous</a></li>
                                {{/if}}

                                <li class="page-item disabled"><a class="page-link"
                                        href="{{ALLUserInformation.navigation.current_page}}" tabindex="0"
                                        aria-disabled="true">Current</a></li>

                                {{#if ALLUserInformation.navigation.next_page}}
                                <li class="page-item"><a class="page-link"
                                        href="{{ALLUserInformation.navigation.next_page}}">Next</a></li>
                                {{else}}
                                <li class="page-item disabled"><a class="page-link"
                                        href="{{ALLUserInformation.navigation.next_page}}" tabindex="1"
                                        aria-disabled="true">Next</a></li>
                                {{/if}}

                            </ul>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{/ifEquals}}

        {{#ifNotEquals ALLUserInformation.success true}}
        <div class="text-center">
            <h3 class="text-danger">User Not Found! </h3>
        </div>
        {{/ifNotEquals}}
    </div>
</div>