<div class="card">
    <h5 class="card-header">{{ToFirstUpper pageType}} Permission</h5>
    <div class="card-body overflow-scroll">
        <form method="POST" action="/Permission/Entry">
            <input type="hidden" name="Task" value="{{pageType}}">
            <div class="mb-3">
                {{#if EditPermission}}
                <input type="hidden" name="Permission" value="{{EditPermission.PermissionId}}">
                {{/if}}
                <label for="Name" class="form-label">Permission Name</label>
                <input type="text" class="form-control" id="Name" name="Name"
                    value="{{#if EditPermission}}{{EditPermission.Name}}{{/if}}">
            </div>
            <div class="form-floating">
                <textarea class="form-control" id="Remarks"
                    name="Remarks">{{#if EditPermission}}{{EditPermission.Remarks}}{{/if}}</textarea>
                <label for="Remarks">Remarks</label>
            </div>
            <div class="mt-3 text-center">
                <button type="submit" class="btn btn-primary text-center"><i class="fas fa-pen"></i> {{#ifEquals
                    pageType 'add' }}Submit{{/ifEquals}}{{#ifEquals pageType 'edit' }}Update{{/ifEquals}}</button>
                <button type="reset" class="btn btn-danger text-center"><i class="fas fa-trash"></i> Cancel</button>
            </div>
        </form>
    </div>
</div>