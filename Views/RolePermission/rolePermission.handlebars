<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col-6">
                <h5>Role Permission List</h5>
            </div>
            <div class="col-6 text-end">
                <a class="btn btn-primary btn-sm " href="/RolePermission/action/add"><i class="fas fa-pen"></i> Add</a>
            </div>
        </div>
    </div>
    <div class="card-body">
        {{#ifEquals RolePermissionInformation.success true}}
        <div class="table-responsive">
            <table class="table table-dark table-striped table-hover">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Role</th>
                        <th scope="col">Permission</th>
                        <th scope="col">Permission Remarks</th>
                        <th scope="col">Status</th>
                        <th class="text-center" colspan="2">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each RolePermissionInformation.result}}
                    <tr>
                        <td>{{SN @index}}</td>
                        <td>{{this.Role}}</td>
                        <td>{{this.Permission}}</td>
                        <td>{{this.Permission_Remarks}}</td>
                        <td>{{this.RolePermission_Status}}</td>
                        <td class="text-center"><a
                                href="/RolePermission/action/edit?RolePermission={{this.RolePermissionId}}"
                                style="text-decoration:none;color:white;"><i class="fas fa-edit text-success"></i>
                                Edit</a>
                            </form>
                        </td>
                        <td class="text-center">
                            <form method="POST" action="/RolePermission/remove/{{this.RolePermissionId}}">
                                <button type="submit" style="background: transparent; color:white;border:none;"><i class="fas fa-trash text-danger"></i>
                                    Delete</button>
                            </form>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr>
                        <td colspan="7">
                            <ul class="pagination justify-content-center">
                                {{#if RolePermissionInformation.navigation.previous_page}}
                                <li class="page-item"><a class="page-link"
                                        href="{{RolePermissionInformation.navigation.previous_page}}">Previous</a></li>
                                {{else}}
                                <li class="page-item disabled"><a class="page-link"
                                        href="{{RolePermissionInformation.navigation.previous_page}}" tabindex="-1"
                                        aria-disabled="true">Previous</a></li>
                                {{/if}}

                                <li class="page-item disabled"><a class="page-link"
                                        href="{{RolePermissionInformation.navigation.current_page}}" tabindex="-1"
                                        aria-disabled="true">Current</a></li>

                                {{#if RolePermissionInformation.navigation.next_page}}
                                <li class="page-item"><a class="page-link"
                                        href="{{RolePermissionInformation.navigation.next_page}}">Next</a></li>
                                {{else}}
                                <li class="page-item disabled"><a class="page-link"
                                        href="{{RolePermissionInformation.navigation.next_page}}" tabindex="-1"
                                        aria-disabled="true">Next</a></li>
                                {{/if}}

                            </ul>
                        </td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{/ifEquals}}

        {{#ifNotEquals RolePermissionInformation.success true}}
        <div class="text-center">
            <h3 class="text-danger">Role Permission Not Found! </h3>
        </div>
        {{/ifNotEquals}}
    </div>
</div>